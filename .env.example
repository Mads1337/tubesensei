# Database Configuration
DATABASE_URL=postgresql+asyncpg://bazaar_user:bazaar_pass@localhost:5433/tubesensei
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=TubeSensei
API_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO
BATCH_SIZE=100
MAX_RETRIES=3

# YouTube API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# LLM API Configuration
# OpenAI API key for GPT models - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude models - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API key for Gemini models (optional) - Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# DeepSeek API key for DeepSeek models (optional) - Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# LLM Settings
LLM_CACHE_TTL=86400  # 24 hours in seconds
LLM_MAX_RETRIES=3
LLM_DEFAULT_TEMPERATURE=0.7
LLM_COST_TRACKING_ENABLED=True

# YouTube API Quota Settings
YOUTUBE_QUOTA_PER_DAY=10000
YOUTUBE_MAX_RESULTS_PER_PAGE=50
YOUTUBE_REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Caching
YOUTUBE_CACHE_TTL=86400  # 24 hours in seconds

# Optional: API Server Settings (if implementing FastAPI endpoints)
# API_HOST=0.0.0.0
# API_PORT=8000
# API_RELOAD=False

# Optional: Worker Settings (for job processing)
# WORKER_CONCURRENCY=4
# WORKER_POLL_INTERVAL=5
# WORKER_BATCH_SIZE=10

# Optional: Monitoring
# SENTRY_DSN=
# ENABLE_METRICS=False
# METRICS_PORT=9090